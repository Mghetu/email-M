{
  "name": "email-editor-grapesjs",
  "version": "2.0.0",
  "description": "Optimized GrapesJS MJML Email Editor with performance enhancements",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack serve --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "build:analyze": "webpack-bundle-analyzer dist/static/js/*.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "serve": "serve -s dist -l 3000",
    "deploy": "node scripts/deploy.js"
  },
  "keywords": [
    "grapesjs",
    "mjml",
    "email-editor",
    "drag-drop",
    "responsive-email",
    "newsletter-builder"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "grapesjs": "^0.21.7",
    "grapesjs-mjml": "^1.0.1",
    "mjml-browser": "^4.15.3",
    "zustand": "^4.4.1",
    "lodash-es": "^4.17.21",
    "dompurify": "^3.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "compression-webpack-plugin": "^10.0.0",
    "terser-webpack-plugin": "^5.3.0",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "serve": "^14.2.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
